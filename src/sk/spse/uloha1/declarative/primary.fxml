<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.spse.uloha1.declarative.Controller">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="20">
      
          <padding>
              <Insets topRightBottomLeft="10" />
          </padding>
      
          <Label text="Celsius" />
      
          <TextField fx:id="cField" editable="true" onKeyTyped="#convertCtoF" style="-fx-padding: 10 20 10 20;" text="0" />
         <Label layoutX="20.0" layoutY="30.0" text="C" />
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" spacing="20">
         <padding>
            <Insets topRightBottomLeft="10" />
         </padding>
         <children>
            <Label text="Farenheit" />
            <TextField fx:id="fField" editable="true" onKeyTyped="#convertFtoC" style="-fx-padding: 10 20 10 20;" text="0" />
            <Label layoutX="56.0" layoutY="30.0" text="F" />
         </children>
      </HBox>
   </children>
</VBox>
